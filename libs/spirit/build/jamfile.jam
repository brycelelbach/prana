project
  : requirements
    <library>/boost/iostreams//boost_iostreams
    <library>/boost/filesystem//boost_filesystem
    <warnings>on
    <toolset>clang:<cxxflags>-Wno-multichar
  ;

lib phxpr 
  : ../src/phxpr/evaluator.cpp
    ../src/phxpr/pattern.cpp
    ../src/phxpr/filesystem/absolute_path.cpp
    ../src/phxpr/filesystem/symlink.cpp
    ../src/phxpr/filesystem/remove.cpp
    ../src/phxpr/filesystem/mkdir.cpp
    ../src/phxpr/filesystem/directory_predicate.cpp
    ../src/phxpr/filesystem/symlink_predicate.cpp
    ../src/phxpr/filesystem/file_predicate.cpp
    ../src/phxpr/ports/io_context.cpp
  ;


