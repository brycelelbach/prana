variant test : <optimization>off <inlining>on <debug-symbols>off ;

project
  : requirements
    <warnings>on
    <toolset>clang:<cxxflags>-Wno-multichar
  ;

{
  alias schematic :
      [ run prana/schematic_become.cpp        : : : : ]
      [ run prana/schematic_capacity.cpp      : : : : ]
      [ run prana/schematic_car.cpp           : : : : ]
      [ run prana/schematic_cdr.cpp           : : : : ]
      [ run prana/schematic_clear.cpp         : : : : ]
      [ run prana/schematic_set.cpp           : : : : ]
      [ run prana/schematic_size.cpp          : : : : ]
      [ run prana/schematic_sizeof.cpp        : : : : ]
    ;

  alias adt :
      [ run prana/adt_ternary_search_tree.cpp : : : : ]
      [ run prana/adt_dynamic_array.cpp       : : : : ]
      [ run prana/adt_source_location.cpp     : : : : ]
      [ run prana/adt_position_iterator.cpp   : : : : ]
    ;
  
  alias sexpr :
      [ run prana/sexpr_basic.cpp             : : : : ]
      [ run prana/sexpr_list.cpp              : : : : ]
    ;

  alias phxpr : 
      [ run prana/phxpr_cxx_add.cpp           : : : : ]
      [ run prana/phxpr_cxx_and.cpp           : : : : ]
      [ run prana/phxpr_cxx_at.cpp            : : : : ]
      [ run prana/phxpr_cxx_back.cpp          : : : : ]
      [ run prana/phxpr_cxx_div.cpp           : : : : ]
      [ run prana/phxpr_cxx_eq.cpp            : : : : ]
      [ run prana/phxpr_cxx_front.cpp         : : : : ]
      [ run prana/phxpr_cxx_if.cpp            : : : : ]
      [ run prana/phxpr_cxx_lambda.cpp        : : : : ]
      [ run prana/phxpr_cxx_list.cpp          : : : : ]
      [ run prana/phxpr_cxx_lt.cpp            : : : : ]
      [ run prana/phxpr_cxx_lte.cpp           : : : : ]
      [ run prana/phxpr_cxx_macro.cpp         : : : : ]
      [ run prana/phxpr_cxx_min.cpp           : : : : ]
      [ run prana/phxpr_cxx_mul.cpp           : : : : ]
      [ run prana/phxpr_cxx_not.cpp           : : : : ]
      [ run prana/phxpr_cxx_or.cpp            : : : : ]
      [ run prana/phxpr_cxx_pattern.cpp       : : : : ]
      [ run prana/phxpr_cxx_rest.cpp          : : : : ]
    ;

  alias json :
      [ run prana/json_basic.cpp              : : : : ]
      [ run prana/json_array.cpp              : : : : ]
      [ run prana/json_object.cpp             : : : : ]
      [ run prana/json_ir.cpp                 : : : : ]
    ;
  
  alias xml :
      [ run prana/xml_basic.cpp               : : : : ]
      [ run prana/xml_attributes.cpp          : : : : ]
      [ run prana/xml_children.cpp            : : : : ]
    ;
}

