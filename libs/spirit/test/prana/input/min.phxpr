(load "boost/test.phxpr") 

(test-suite 'prana-unit-test-add
  ; binary
  ((test-eq                   (- 2 4)                       -2)
   (test-eq ((lambda (x)      (- 2 x))            4)        -2)
   (test-eq ((lambda (x y)    (- x y))            2 4)      -2)
   (test-eq ((lambda (x y)    (- 2 (- x y)))      4 8)      6)

  ; nary
   (test-eq                   (- 2 4 8)                     -10)
   (test-eq ((lambda (x)      (- 2 4 x))          8)        -10)
   (test-eq ((lambda (x y)    (- 2 x y))          4 8)      -10)
   (test-eq ((lambda (x y z)  (- 2 4 (- x y z)))  8 16 32)  38)

  ; negative
   (test-eq                   (- -2 4)                      -6)
   (test-eq ((lambda (x)      (- x 4))            -2)       -6)))

