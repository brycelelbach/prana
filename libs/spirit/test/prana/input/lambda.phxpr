(load "boost/test.phxpr") 

(test-suite 'prana-unit-test-add
  ; factorial
  ((define fact
    (lambda (n)
      (if (<= n 0) 1
        (* n (fact (- n 1))))))

   (test-eq ((lambda (x)  (fact x)) 0)  1)
   (test-eq ((lambda (x)  (fact x)) 1)  1)
   (test-eq ((lambda (x)  (fact x)) 2)  2)
   (test-eq ((lambda (x)  (fact x)) 3)  6)
   (test-eq ((lambda (x)  (fact x)) 4)  24)
   (test-eq ((lambda (x)  (fact x)) 5)  120)
   (test-eq ((lambda (x)  (fact x)) 6)  720)
   (test-eq ((lambda (x)  (fact x)) 7)  5040)
   (test-eq ((lambda (x)  (fact x)) 8)  40320)
   (test-eq ((lambda (x)  (fact x)) 9)  362880)
   (test-eq ((lambda (x)  (fact x)) 10) 3628800)

  ; fibonacci sequence
   (define fib
    (lambda (n)
      (if (< n 2) n
        (+ (fib (- n 1)) (fib (- n 2)))))) 
   
   (test-eq ((lambda (x)  (fib x))  0)  0)
   (test-eq ((lambda (x)  (fib x))  1)  1)
   (test-eq ((lambda (x)  (fib x))  2)  1)
   (test-eq ((lambda (x)  (fib x))  3)  2)
   (test-eq ((lambda (x)  (fib x))  4)  3)
   (test-eq ((lambda (x)  (fib x))  5)  5)
   (test-eq ((lambda (x)  (fib x))  6)  8)
   (test-eq ((lambda (x)  (fib x))  7)  13)
   (test-eq ((lambda (x)  (fib x))  8)  21)
   (test-eq ((lambda (x)  (fib x))  9)  34)
   (test-eq ((lambda (x)  (fib x))  10) 55)))

