(load "boost/test.phxpr") 

(test-suite 'prana-unit-test-div
  ; binary
  ((test-eq                   (/ 8 4)                       2)
   (test-eq ((lambda (x)      (/ 8 x))              4)      2)
   (test-eq ((lambda (x y)    (/ x y))              8 4)    2)
   (test-eq ((lambda (x y)    (/ 8 (/ x y)))        4 2)    4)

  ; nary
   (test-eq                   (/ 8 4 2)                     1)
   (test-eq ((lambda (x)      (/ 8 4 x))            2)      1)
   (test-eq ((lambda (x y)    (/ 8 x y))            4 2)    1)
   (test-eq ((lambda (x y z)  (/ 32 16 (/ x y z)))  8 4 2)  2)

  ; negative
   (test-eq                   (/ -4 2)                      -2)
   (test-eq ((lambda (x)      (/ x 2))              -4)     -2)))

