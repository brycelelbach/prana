(load "boost/test.phxpr") 

(test-suite 'prana-unit-test-mul
  ; binary
  ((test-eq                   (* 2 4)                       8)
   (test-eq ((lambda (x)      (* 2 x))            4)        8)
   (test-eq ((lambda (x y)    (* x y))            2 4)      8)
   (test-eq ((lambda (x y)    (* 2 (* x y)))      4 8)      64)

  ; nary
   (test-eq                   (* 2 4 8)                     64)
   (test-eq ((lambda (x)      (* 2 4 x))          8)        64)
   (test-eq ((lambda (x y)    (* 2 x y))          4 8)      64)
   (test-eq ((lambda (x y z)  (* 2 4 (* x y z)))  8 16 32)  32768)

  ; negative
   (test-eq                   (* -2 4)                      -8)
   (test-eq ((lambda (x)      (* x 4))            -2)       -8)))

