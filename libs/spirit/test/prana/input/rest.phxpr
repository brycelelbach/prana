(load "boost.test") 

(boost:test:suite (quote phxpr:intrinsics:rest)
  ; basic
  ((variable l1 (quote (2 3)))

   (boost:test:= (rest (list 1 2 3)) l1)
   (boost:test:= ((lambda (x) (rest (list 1 2 x))) 3) l1)
   (boost:test:= ((lambda (x y) (rest (list 1 x y))) 2 3) l1) 

  ; nested
   (variable l2 (quote (3)))
   (variable l3 (quote ((2) (3))))

   (boost:test:= (rest (list (list 1) (list 2) (list 3))) l3)
   (boost:test:= ((lambda (x y) (rest (list (list 1) (list x) y))) 2 l2) l3)))

