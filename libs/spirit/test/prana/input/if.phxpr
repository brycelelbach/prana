(load "boost/test.phxpr") 

(test-suite 'prana-unit-test-if
  ; if branch
  ((test-eq                   (if 0 1 2)                    2)
   (test-eq ((lambda (x)      (if 0 1 x))           2)      2)
   (test-eq ((lambda (x y)    (if 0 x y))           1 2)    2)
   (test-eq ((lambda (x y z)  (if 0 x (if y z x)))  1 2 3)  3)

  ; else branch
   (test-eq                   (if 3 4 5)                    4)
   (test-eq ((lambda (x)      (if 3 4 x))           5)      4)
   (test-eq ((lambda (x y)    (if 3 x y))           4 5)    4)
   (test-eq ((lambda (x y z)  (if 3 x (if y z x)))  4 5 6)  4)))


